  form#myform1
    = text_area_tag 'cont1',nil,rows:6,class:'input-xlarge span12'
  .alert.alert-block.alert-info
    h3.alert-heading
      span.label.label-warning 注意
      | 先输入上框数据后再选择对应功能进行操作

    .btn-toolbar style="margin-top: 18px;"
      .btn-group
        = link_to sanitize('<i class="icon-fire icon-white"></i> 去欠费'), { action: "pstn_stop" }, { method: "post", class: "btn btn-large btn-primary", href: "#", id: "reverse_pstn_stop" }

