<h1>所有交班记录汇总</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th style="text-align: center">内容</th>
    <th style="text-align: center">开始于</th>
    <th style="text-align: center">结束于</th>
    <th style="text-align: center">记录员</th>
    <th colspan="3" style="text-align: center">动作</th>
  </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td class="span2" style="vertical-align:middle;text-align: center"><%= event.start_at.strftime('%Y-%m-%d %H:%M') %></td>
        <td class="span2" style="vertical-align:middle;text-align: center"><%= event.end_at.strftime('%y-%m-%d %H:%M') %></td>
        <td class='span1' style="vertical-align:middle;text-align: center"><%= event.user.alias_name %></td>
        <td class='span1' style="vertical-align:middle;text-align: center"><%= link_to '查看', event %></td>
        <td class='span1' style="vertical-align:middle;text-align: center"><%= link_to '编辑', edit_event_path(event) %></td>
        <td class='span1' style="vertical-align:middle;text-align: center"><%= link_to '删除', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to '新建交班日志', new_event_path ,{class:'btn btn-primary'}%>
