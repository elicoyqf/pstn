<div class="container-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="content-box-header">
        输入查询条件：
      </div>
      <br/>
      <%= form_tag 'q_submit', id: 'e_query', method: 'get' do -%>
          <div class="row-fluid">
            <div class="span6">
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">查询内容</span>
                  <%= text_field :event, 'content', { :class => "span6", :size => "16", :id => "q_content" } %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">日志类型</span>
                  <%= select_tag('log_type', options_for_select(LOG_TYPE),
                                 { prompt:   '选择交班类型',
                                   class:    'span6',
                                   id:       'log_type',
                                   required: true }) -%>
                </div>
              </div>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span6">
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">开始日期</span>
                  <%= text_field :event, "date1", { :class => "span6", :id => "e_q_date1" } %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">结束日期</span>
                  <%= text_field :event, "date2", { :class => "span6", :id => "e_q_date2" } %>
                </div>
              </div>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span6 offset3">
              <button id="e_q_submit" class="btn btn-primary span8">查 询 数 据</button>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal hide fade" id="e_con_Modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>条件输入有错误</h3>
  </div>
  <div class="modal-body">
    <h4>
      <p>最少需要输入一项条件才能查询!</p>
    </h4>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-danger btn-large" data-dismiss="modal">关 闭</a>
  </div>
</div>

<div class="modal hide fade" id="e_date_Modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>日期选择有错误</h3>
  </div>
  <div class="modal-body">
    <h4>
      <p>结束日期要大于或等于开始日期!</p>
    </h4>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-danger btn-large" data-dismiss="modal">关 闭</a>
  </div>
</div>