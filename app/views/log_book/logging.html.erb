<div class="container-fluid">
  <div class="row-fluid">
    <div class="content-box-header">
      今日交班所有事项如下示：
    </div>
    <% @logs.each_with_index do |event, i| %>
        <div class="row">
          <% if i % 2 == 0 %>
              <div class="span2 offset1">
                <%= image_tag 'avatar.png' %>
                <%= event.user.alias_name %>
                <br/>
                类型：
                <% if event.event_type.to_i == 1 %>
                    故障
                <% else %>
                    日常
                <% end %>
                <br/>
                时间：<%= event.created_at.strftime('%Y-%m-%d %H:%M') %>

              </div>
              <div class="span6">
                <blockquote class="triangle-border left">
                  <p>
                    <%= event.name %>
                  </p>
                  <hr/>
                  <% unless event.update_id.blank? %>
                      <blockquote class="pull-right">
                        <small>最后一次修改是由
                          <%= User.where('id = ?', event.update_id).first.alias_name %> 在
                          <%= event.updated_at.strftime('%Y-%m-%d %H:%M') %></small>
                      </blockquote>
                  <% end %>
                  <div class="btn-toolbar">
                    <div class="btn-group">
                      <%= link_to '查看', event, { class: 'btn btn-info' } %>
                      <%= link_to '编辑', edit_event_path(event), { class: 'btn btn-warning' } %>
                      <%= link_to '删除', event, method: :delete, data: { confirm: '删除的日志无法恢复,确定要删除吗?' },
                                  class:               'btn btn-danger' %>
                    </div>
                  </div>

                </blockquote>
              </div>
          <% else %>
              <div class="span6 offset3">
                <blockquote class="triangle-border right">
                  <p>
                    <%= event.name %>
                  </p>
                  <hr/>
                  <% unless event.update_id.blank? %>
                      <blockquote class="pull-right">
                        <small>最后一次修改是由
                          <%= User.where('id = ?', event.update_id).first.alias_name %> 在
                          <%= event.updated_at.strftime('%Y-%m-%d %H:%M') %></small>
                      </blockquote>
                  <% end %>
                  <div class="btn-toolbar">
                    <div class="btn-group">
                      <%= link_to '查看', event, { class: 'btn btn-info' } %>
                      <%= link_to '编辑', edit_event_path(event), { class: 'btn btn-warning' } %>
                      <%= link_to '删除', event, method: :delete, data: { confirm: '删除的日志无法恢复,确定要删除吗?' },
                                  class:               'btn btn-danger' %>
                    </div>
                  </div>

                </blockquote>

              </div>
              <div class="span2">
                <%= image_tag 'avatar.png' %>
                <%= event.user.alias_name %>
                <br/>
                类型：
                <% if event.event_type.to_i == 1 %>
                    故障
                <% else %>
                    日常
                <% end %>
                <br/>
                时间：<%= event.created_at.strftime('%Y-%m-%d %H:%M') %>
              </div>
          <% end %>
        </div>
    <% end %>

  </div>
</div>

<br/>
<br/>

<div class="container-fluid alert alert-block alert-info">
  <div class="row-fluid">
    <div class="span3 offset1" style="width: 100px;height:20px">
      <%= image_tag 'sound.png' -%>
    </div>
    <div class="span9">
      <%= form_tag('log_submit') do -%>
          <%= select_tag('log_type', options_for_select([['日常', 2], ['故障', 1], ['要点', 3]]),
                         { prompt:   '选择交班类型',
                           class:    'span3',
                           id:       's_bp',
                           required: true }) -%>
          <%= text_area_tag 'my_log', nil, rows: 6, class: 'input-xlarge span12' -%>

          <div class="span12 offset4">
            <button id="s_b_s" class="btn btn-large btn-success span4">
              <i class="icon-fire icon-white"></i>
              提交日志
            </button>
          </div>
      <% end -%>
    </div>
  </div>
</div>