<div class="container-fluid">
  <div class="row-fluid">

    <% @logs.each_with_index do |x, i| %>
        <div class="row">
          <% if i%2 == 0 %>
              <div class="span2" style="width: 150px;">
                <%= image_tag 'avatar.png' %>
                易其锋<br/>
                类型：
                <% if x.log_type.to_i == 1 %>
                    故障
                <% else %>
                    日常
                <% end %>
                <br/>
                时间：<%= x.created_at.strftime('%Y-%m-%d %H:%M') %>
              </div>
              <div class="span5 offset1">
                <blockquote class="example-left">
                  <p>
                    <%= x.content %>
                  </p>
                </blockquote>
              </div>
          <% else %>
              <div class="span2" style="width: 150px;">
              </div>
              <div class="span5 offset1">
                <blockquote class="example-right">
                  <p>
                    <%= x.content %>
                  </p>
                </blockquote>
              </div>
              <div class="span2 offset1" style="width: 150px;">
                <%= image_tag 'avatar.png' %>
                易其锋<br/>
                类型：
                <% if x.log_type.to_i == 1 %>
                    故障
                <% else %>
                    日常
                <% end %>
                <br/>
                时间：<%= x.created_at.strftime('%Y-%m-%d %H:%M') %>
              </div>
          <% end %>
        </div>
    <% end %>

  </div>
</div>

<br/>
<br/>

<div class="container-fluid alert alert-block alert-info">
  <div class="row-fluid">
    <div class="span3 offset1" style="width: 100px;height:20px">
      <%= image_tag 'sound.png' %>
    </div>
    <div class="span9">
      <%= form_tag('log_submit') do %>
          <%= select(:loging, 'log_type', { "故障" => "1", "日常" => "2" }, { prompt: '选择交班类型' }, { class:    'span4', id: "s_bp",
                                                                                                required: true }) %>
          <%= text_area_tag 'my_log', nil, rows: 6, class: 'input-xlarge span12' %>

          <div class="span12 offset4">
            <button id="s_b_s" class="btn btn-large btn-success span4">
              <i class="icon-fire icon-white"></i>
              提交日志
            </button>
          </div>
      <% end %>
    </div>
  </div>
</div>